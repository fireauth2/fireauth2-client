{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "target": "esnext",
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": false,
    "outDir": "../../dist/packages/core", // important
    "rootDir": "./src",
    "inlineSources": true,
    "types": [],
    "lib": ["DOM", "DOM.Iterable", "ES2022"]
  },
  "exclude": [
    "src/**/*.spec.ts",
    "src/test-setup.ts",
    "jest.config.ts",
    "src/**/*.test.ts"
  ],
  "include": ["src/**/*.ts"]
}
